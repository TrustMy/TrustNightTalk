<?xml version="1.0" encoding="utf-8"?>
<com.trust.calculatelayout.TrustTelescopicRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/share_the_mood_recycler"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.CardView
        android:layout_centerInParent="true"
        app:trust_layout_width = "265"
        app:trust_layout_height = "99"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        >

        <com.trust.calculatelayout.TrustTelescopicLinerLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f7f7f7"
            android:orientation="vertical">

            <com.trust.calculatelayout.TrustTelescopicLinerLayout
                app:trust_layout_width = "265"
                app:trust_layout_height = "28"
                app:trust_layout_marginTop = "12"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    app:trust_layout_width = "27"
                    app:trust_layout_height = "27"
                    app:trust_layout_marginLeft = "13"
                    android:src="@mipmap/ic_launcher_round"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:gravity="center_vertical"
                    android:textColor="#000000"
                    android:text="Jon Wallace"
                    android:textStyle="bold"
                    app:trust_layout_width = "120"
                    app:trust_layout_height = "27"
                    app:trust_layout_marginLeft = "8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </com.trust.calculatelayout.TrustTelescopicLinerLayout>


            <TextView
                app:trust_layout_marginLeft = "48"
                android:text="Proper cookery renders good food material more digestible."
                app:trust_layout_width = "205"
                app:trust_layout_height = "34"
                app:trust_layout_marginRight = "16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:text="November 23 12:30"
                app:trust_layout_width = "250"
                app:trust_layout_height = "20"
                app:trust_layout_marginLeft = "48"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        </com.trust.calculatelayout.TrustTelescopicLinerLayout>



    </android.support.v7.widget.CardView>



</com.trust.calculatelayout.TrustTelescopicRelativeLayout>



