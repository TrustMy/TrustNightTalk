<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/share_the_mood_recycler"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardElevation="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.trust.calculatelayout.TrustTelescopicLinerLayout
        android:orientation="vertical"
        app:trust_layout_width = "-1"
        app:trust_layout_height = "252"
        app:trust_layout_marginLeft = "14"
        app:trust_layout_marginRight = "14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.trust.calculatelayout.TrustTelescopicRelativeLayout
            app:trust_layout_width = "-1"
            app:trust_layout_height = "30"
            app:trust_layout_marginTop = "7"
            app:trust_layout_marginLeft = "14"
            app:trust_layout_marginRight = "14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/item_share_mood_user_logo_img"
                android:src="@drawable/user_1"
                app:trust_layout_width = "30"
                app:trust_layout_height = "30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.trust.calculatelayout.TrustTelescopicLinerLayout
                app:trust_layout_marginLeft = "14"
                android:layout_toRightOf="@+id/item_share_mood_user_logo_img"
                app:trust_layout_width = "80"
                app:trust_layout_height = "30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_share_mood_user_name_tv"
                    android:textStyle="bold"
                    android:text="Aiden Smith"
                    app:trust_layout_width = "-1"
                    app:trust_layout_height = "17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/item_share_mood_msg_time_tv"
                    android:text="08:13PM"
                    app:trust_layout_width = "-1"
                    app:trust_layout_height = "-1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



            </com.trust.calculatelayout.TrustTelescopicLinerLayout>

            <ImageView
                android:id="@+id/item_share_mood_attention_status_img"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_attention_status_off"
                android:layout_alignParentRight="true"
                app:trust_layout_marginRight = "61"
                app:trust_layout_width = "22"
                app:trust_layout_height = "22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />




        </com.trust.calculatelayout.TrustTelescopicRelativeLayout>

        <!--分享图片布局-->

        <com.trust.calculatelayout.TrustTelescopicLinerLayout
            app:trust_layout_marginTop = "7"
            android:id="@+id/share_mood_photo_layout"
            android:visibility="gone"
            app:trust_layout_width = "-1"
            app:trust_layout_height = "109"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:id="@+id/share_mood_description_tv"
            app:trust_layout_width = "262"
            app:trust_layout_marginLeft = "14"
            app:trust_layout_marginRight = "14"
            app:trust_layout_marginTop = "7"
            app:trust_layout_height = "32"
            android:text="Namaskar,welcome to incredible India,enthralls and diversity delights."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            app:trust_layout_marginTop = "7"
            app:trust_layout_width = "262"
            app:trust_layout_marginLeft = "14"
            app:trust_layout_marginRight = "14"
            app:trust_layout_height = "70"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:scaleType="fitXY"
                        android:src="@drawable/item_logo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:scaleType="fitXY"
                        android:src="@drawable/item_logo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </android.support.v7.widget.CardView>



                <android.support.v7.widget.CardView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:scaleType="fitXY"
                        android:src="@drawable/item_logo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </android.support.v7.widget.CardView>

            </LinearLayout>



        </LinearLayout>

        </com.trust.calculatelayout.TrustTelescopicLinerLayout>

        <!--分享视频-->
    <com.trust.calculatelayout.TrustTelescopicRelativeLayout
        android:background="@drawable/video_bg"
        app:trust_layout_marginTop = "7"
        android:id="@+id/share_mood_video_layout"
        app:trust_layout_width = "262"
        app:trust_layout_height = "109"
        app:trust_layout_marginLeft = "14"
        app:trust_layout_marginRight = "14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/share_mood_video_img"
            app:trust_layout_width = "-1"
            app:trust_layout_height = "-1"
            android:src="@drawable/vio"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.trust.calculatelayout.TrustTelescopicRelativeLayout
            android:layout_alignParentBottom="true"
            android:background="#70000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:trust_layout_width = "262"
            app:trust_layout_height = "30"
            android:gravity="center_vertical">


            <ImageView
                android:id="@+id/share_mood_start"
                app:trust_layout_marginLeft = "10"
                android:background="@mipmap/ic_launcher"
                app:trust_layout_width = "15"
                app:trust_layout_height = "15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                app:trust_layout_marginLeft = "14"
                android:textColor="@color/colorWhile"
                android:layout_toRightOf="@+id/share_mood_start"
                android:text="Five Hundred Miles"
                app:trust_layout_width = "160"
                app:trust_layout_height = "15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                app:trust_layout_marginRight = "12"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorWhile"
                android:text="04:36"
                app:trust_layout_width = "30"
                app:trust_layout_height = "15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </com.trust.calculatelayout.TrustTelescopicRelativeLayout>

    </com.trust.calculatelayout.TrustTelescopicRelativeLayout>

        <LinearLayout
            app:trust_layout_width = "262"
            app:trust_layout_marginLeft = "34"
            app:trust_layout_marginRight = "14"
            app:trust_layout_height = "32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_gravity="center"
                android:drawablePadding="-30dp"
                android:gravity="center"
                android:drawableLeft="@drawable/ic_message"
                android:text="1.8k"
                android:layout_weight="1"
                android:layout_width="40dp"
                android:layout_height="20dp" />

            <TextView
                android:layout_gravity="center"
                android:drawablePadding="-30dp"
                android:gravity="center"
                android:drawableLeft="@drawable/ic_love"
                android:text="1.8k"
                android:layout_weight="1"
                android:layout_width="40dp"
                android:layout_height="20dp" />


            <TextView
                android:drawablePadding="-30dp"
                android:gravity="center"
                android:drawableLeft="@drawable/ic_share"
                android:text="540"
                android:layout_weight="1"
                android:layout_width="40dp"
                android:layout_height="20dp" />


        </LinearLayout>


    </com.trust.calculatelayout.TrustTelescopicLinerLayout>

</android.support.v7.widget.CardView>



