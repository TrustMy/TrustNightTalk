<?xml version="1.0" encoding="utf-8"?>
<com.trust.calculatelayout.TrustTelescopicLinerLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFEFE"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

      <android.support.v7.widget.CardView
          app:cardElevation="2dp"
          android:background="@color/colorWhile"
          android:gravity="center_vertical"
          app:trust_layout_width = "-1"
          app:trust_layout_height = "30"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent">

          <LinearLayout
              android:id="@+id/fragment_home_navigation_bar"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"/>

          <LinearLayout
              android:layout_alignParentBottom="true"
              android:layout_gravity="end"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_marginBottom="8dp">

              <ImageView
                  android:background="@drawable/indicator_bg"
                  android:id="@+id/cursor_btn"
                  android:layout_width="25dp"
                  android:layout_height="5dp">
              </ImageView>
          </LinearLayout>
          </RelativeLayout>

      </android.support.v7.widget.CardView>



    <FrameLayout
        android:id="@+id/home_framLayout"
        app:trust_layout_width = "-1"
        app:trust_layout_height = "-1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>





</com.trust.calculatelayout.TrustTelescopicLinerLayout>